{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "module": "esnext",
    "target": "es2015",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react",
    "strict": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "esModuleInterop": true
  },
  "include": [
    "./src",
    "./typing.d.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "scripts"
  ]
}
